<main>
    <form class="input-field" id="translite-form" method="post" action="/">
        <div class="row">
            <div class="input-field col s6">
                <select id="srclang" name="srclang">
                    <option value="" disabled selected>Choose language</option>
                    <option value="Russian">Russian</option>
                    <option value="Spanish">Spanish</option>
                </select>
                <label for="srclang">Source language</label>
            </div>
            <div class="input-field col s6">
                <select id="resultlang" name="resultlang">
                    <option value="" disabled selected>Choose language</option>
                    <option value="Georgian">Georgian</option>
                    <option value="Hebrew">Hebrew</option>
                    <option value="Yiddish">Yiddish</option>
                </select>
                <label for="resultlang">To script of...</label>
            </div>
        </div>

        <div class="waves-effect waves-light orange btn">
            <input type="submit" value="Transliterate">
        </div>

        <div class="row">
            <div class="input-field col s12">
                <textarea required id="srctext" class="materialize-textarea" name="srctext"></textarea>
                <label for="srctext">Insert your text</label>
            </div>
        </div>
    </form>
</main>

