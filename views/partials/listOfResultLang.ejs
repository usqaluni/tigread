<% const languagesTo = [
    ["Hebrew", "Hebrew"],
    ["Yiddish", "Yiddish"],
    ["Georgian", "Georgian"],
]; %>

<select id="resultlang" name="resultlang">
    <option value="" disabled selected>Choose learning language</option>
<% for (var i = 0; i < languagesTo.length; i++) { %>
        <% if(languagesTo[i][0] === data.resultlang) { %>
            <option value="<%= languagesTo[i][0] %>" selected><%= languagesTo[i][1]%></option>
        <% } else { %>
            <option value="<%= languagesTo[i][0] %>"><%= languagesTo[i][1] %></option>
        <% } %>
    <% } %>
</select>
<label for="resultlang">Learning script</label>
