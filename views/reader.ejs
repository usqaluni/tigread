<!doctype html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css"
          media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/styles/main.css"/>
    <link type="text/css" rel="stylesheet" href="/styles/fonts.css"/>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>tigRead | reader</title>
</head>

<body>
<% let data = JSON.parse(jsonData); %>
<% let fontList = data.fontList %>
<ul id="fontList" class="dropdown-content">
    <li><a class="fontNames" id="Default">Default</a></li>
    <% for(let i = 0; i < fontList.length; i++) { %>
        <li><a class="fontNames" id="<%= data.resultlang + "/" + fontList[i] %>"><%= fontList[i].replace(/\.[^/.]+$/, "") %></a></li>
    <% } %>
</ul>
<nav>
    <div id="navbar" class="nav-wrapper orange">
        <a onclick="javascript:history.back(); return false;" class="brand-logo right">🐯 tigRead</a>
        <ul id="nav-mobile">
            <li><a id="fontSizeSmaller" class="no-select"><i class="material-icons">zoom_out</i></a></li>
            <li><span id="fontSize" class="no-select">20</span></li>
            <li><a id="fontSizeBigger" class="no-select"><i class="material-icons">zoom_in</i></a></li>
            <li><i class="material-icons transparent-text no-select">add</i></li>
            <li><a id="night" class="no-select"><i class="material-icons">brightness_3</i></a></li>
            <li><a style="width: 150px;" class="dropdown-trigger" data-target="fontList">Fonts<i class="material-icons right hide-on-small-and-down">arrow_drop_down</i></a></li>
        </ul>
    </div>
</nav>
<main>
    <div class="container readerContainer">
        <% let transliteratedText = data.transliteratedText; %>
        <div <% if(data.direction === "rtl") { %>dir="rtl" <% } %>class="reader" id="resultText"><%= transliteratedText %></div>

        <div id="pagination" class="row pagination">
            <div class="col m3 s2"><a id="pageBack"><i class="material-icons orange white-text">chevron_left</i></a></div>
            <div class="col m6 s3"><input id="pageNumber" name="pageNumber" type="number"><label for="pageNumber"></label>
            </div>
            <div class="col m3 s2"><a id="pageForward"><i class="material-icons orange white-text">chevron_right</i></a>
            </div>
        </div>
    </div>
    <div id="show" class="fixed-action-btn">
        <button class="btn-floating btn-large orange tooltipped" data-position="top" data-tooltip="Shows original of selection">
            <i class="large material-icons">language</i>
        </button>
    </div>
</main>

<footer class="page-footer transparent">
    <div id="footer" class="footer-copyright orange">
        <div class="container">
            © 2022 tigRead
            <a class="grey-text text-lighten-4 right" target="_blank" href="https://heder.ru">Ulpan Heder</a>
        </div>
    </div>
</footer>

<!-- original text -->
<div id="originalText" style="display: none;"><%= data.text %></div>

<script src="/scripts/showOriginal.js"></script>
<script src="/scripts/fonts.js"></script>
<script src="/scripts/nightMode.js"></script>
<script src="/scripts/fontSize.js"></script>
<script src="/scripts/pagination.js"></script>
<script src="/scripts/main.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.js"
        integrity="sha512-m2PhLxj2N91eYrIGU2cmIu2d0SkaE4A14bCjVb9zykvp6WtsdriFCiXQ/8Hdj0kssUB/Nz0dMBcoLsJkSCto0Q=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>